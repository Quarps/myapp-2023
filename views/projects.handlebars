<div id="main">
  <div class="container">
    <h1>My projects</h1>
    {{#if isAdmin}}
      <div>
        <a
          href="/project/new"
          class="btn btn-primary input-group-btn"
          type="submit"
        >
          Add project
        </a>
      </div>
      <br>
    {{/if}}
    <div class="columns">
      {{#if dbError}}
        <div>
          Sorry, there was a problem with the database:<br />
          {{theError}}
        </div>
      {{else}}
        {{#each projects}}
        <a href="/projects/view/{{projectID}}">
          <div class="column col-3 card">
            <div class="card-image">
            <img
              src="{{projectImage}}"
              alt="{{projectImage}}"
              class="img-responsive"
            />
            </div>
            <div class="card-header p-2">
              <div class="card-title h5 ">{{projectName}}</div>
              <div class="card-subtitle text-gray">{{projectDate}}</div>
            </div>
            <div class="card-footer p-2">
              {{#if ../isAdmin}}
                <div>
                  <a href="/projects/update/{{projectID}}" class="btn btn-primary"> Modify </a>
                  
                  <a  href="/projects/delete/{{projectID}}" class="btn btn-primary important">
                    Delete
                  </a>
                </div>
              {{/if}}
            </div>
          </div>
          </a>
       <!-- paging -->
        {{/each}}
      {{/if}}
    </div>
     <br>
       <ul class="pagination">
        <!-- Code UNDERNEATH inspired by Liam Melkersson -->
        {{#if showPrevious}}
        <li class="page-item">
          <a href="/projects?page={{prevPage}}" >Previous</a>
        </li>
        {{/if}}
        {{#each pages}}
          <li class="page-item">
           <a href="/projects?page={{this}}" class="page-link">{{this}}</a>
          </li>
        {{/each}}
        {{#if showNext}}
        <li class="page-item">
          <a href="/projects?page={{nextPage}}" >Next</a>
        </li>
        {{/if}}
        <!-- Code ABOVE inspired by Liam Melkersson -->
      </ul>
  </div>
</div>
