<div id="main">
  <div class="container">
    <h1>My projects</h1>
    <!--p>dbError: {{dbError}}, 1sAdmin: {{isAdmin}}, name: {{name}}, is LoggedIn: {{1sLoggedIn}}</p-->
    {{#if isAdmin}}
      <div>
        <a
          href="/projects/new"
          class="btn btn-primary input-group-btn"
          type="submit"
        >
          Add project
        </a>
      </div>
      <br>
    {{/if}}
    <div class="columns">
      {{#if dbError}}
        <div>
          Sorry, there was a problem with the database:<br />
          {{theError}}
        </div>
      {{else}}
        {{#each projects}}
        <a href="/project/{{project.projectID}}">
          <div class="column col-3 card">
            <div class="card-image">
            <img
              src="{{projectImage}}"
              alt="{{projectImage}}"
              class="img-responsive"
            />
            </div>
            <div class="card-header">
              <div class="card-title h5 ">{{projectName}}</div>
              <div class="card-subtitle text-gray">{{projectDate}}</div>
            </div>
            <div class="card-footer">
              {{#if ../isAdmin}}
                <div>
                  <a href="/projects/update/{{projectID}}" class="btn btn-primary"> Modify </a>
                  
                  <a  href="/projects/delete/{{projectID}}" class="btn btn-primary important">
                    Delete
                  </a>
                </div>
              {{/if}}
            </div>
          </div>
          </a>
        {{/each}}
      {{/if}}
    </div>
  </div>
</div>