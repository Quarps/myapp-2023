<div id="main">
  <div class="container">
    <h1>My projects</h1>
    <!--p>dbError: {{dbError}}, 1sAdmin: {{isAdmin}}, name: {{name}}, is LoggedIn: {{1sLoggedIn}}</p-->
    {{#if isAdmin}}
      <div>
        <a href="/projects/new" class="btn btn-link"> New project </a>
      </div>
    {{/if}}
    <div class="columns">
      {{#if dbError}}
        <div>
          Sorry, there was a problem with the database:<br />
          {{theError}}
        </div>
      {{else}}
        {{#each projects}}
          <div class="column col-4 col-md-6 col-sm-12">
            <div class="card">
              <div class="card-image">
                <img
                  src="{{pingURL}}"
                  alt="{{pingURL}}"
                  class="img-responsive"
                />
              </div>
              <div class="card-header">
                <div class="card-title h3">{{projectName}}</div>
                <div class="card subtitle text white">{{pyear}} {{ptype}}</div>
              </div>
              <div class="card-footer">
                {{#if isAdmin}}
                  <div>
                    <a href="/projects/update/{{pid}}"> Modify </a>
                    -
                    <a href="/projects/delete/{{pid}}" class="important">
                      Delete
                    </a>
                  </div>
                {{/if}}
              </div>
            </div>
          </div>
        {{/each}}
      {{/if}}
    </div>
  </div>
</div>